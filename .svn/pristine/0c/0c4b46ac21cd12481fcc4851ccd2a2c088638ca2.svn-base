//全局定义验证规则
Vue.prototype.phoneRule=(rule,value,callback)=>{
    const reg = /^[1][2,3,4,5,6,7,8][0-9]{9}$/
    if (!value){
        callback(new Error('请输入您的手机号码'))
    }else if (!reg.test(value)){
        callback(new Error('请输入正确的11位手机号码'))
    }else {
        callback()
    }
};


